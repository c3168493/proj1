// Aim: Encryption of a message with a rotation cipher given the message text and rotation amount       


#include <stdio.h>

int main() {

char msg[] = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";              // Input Message
int i;                                                  // i = Counter
int r = 1;                                              // r = Rotation Amount
char c, k;                                              // c = String variable being allocated to number                                           

//Original Message
printf("\nOriginal Message: %s", msg);

//Loop allocating string element to number (-65 so we can get a nice 0-25 allocation)
for(i=0; i<26; i++){
   c = msg[i];
   c = c - 65;
   //printf("%d ", c); 
   
   k = c + r;
   
   if(k>25){
       k = c + r;
       k = k - 26;
       //printf("\n%d", k);
       
   }
   
   
}

